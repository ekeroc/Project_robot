<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="kkcw.andbad.bluetoothcar_arduino_v1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="連線"
        android:id="@+id/btIdConnect"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btIdBack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="結束"
        android:id="@+id/btIdEnd"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btIdRight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前進"
        android:id="@+id/btIdForward"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btIdStop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左轉"
        android:id="@+id/btIdLeft"
        android:layout_below="@+id/btIdForward"
        android:layout_toStartOf="@+id/btIdForward" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:id="@+id/btIdStop"
        android:layout_below="@+id/btIdForward"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右轉"
        android:id="@+id/btIdRight"
        android:layout_below="@+id/btIdForward"
        android:layout_toEndOf="@+id/btIdForward" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="後退"
        android:id="@+id/btIdBack"
        android:layout_below="@+id/btIdStop"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
