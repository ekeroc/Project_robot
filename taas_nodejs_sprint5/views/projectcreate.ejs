<!DOCTYPE html>
<html>
<head>
	<%- include partial/head.ejs %>
	<script type="text/javascript" src="/task/js/descriptorType.js"></script>
	<script type="text/javascript" src="/task/js/check.js"></script>
	<script type="text/javascript" src="/project/js/autoFocus.js"></script>
	<script type="text/javascript" src="/task/js/addProjTaskFormMaker.js"></script>
	<script type="text/javascript" src="/project/js/createProject.js"></script>
</head>
<body> 
	<%- include partial/header.ejs %>
	<div class="section-nav">
		<div class="container">
			<div class="pro_hvcenter_title">
				<h3>
					<ul class="breadcrumb">
						<li><a href="/projectList">Project List</a></li>
						<li class="active"><%=title%></li>
					</ul>
				</h3>
			</div>
		</div>
		<hr>
	</div>
	<div class="container">
		<p class="sysMsg_red" id="alertBar"></p>
		<div class="form-field">
			<form class="form-horizontal" id="projectForm">
				<fieldset>
					<div class="form-group" id="projNameDiv">
						<label class="col-lg-3 control-label">
							<div class="form-label">Project Name:</div>
						</label>
						<div class="col-lg-9">
							<div class="form-label">
								<input type="text" class="form-control" id="projName" name="projName" value = "">
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="col-lg-3 control-label">Project Description:</label>
						<div class="col-lg-9">
							<input type="text" class="form-control" id="projDesc" name="projDesc" value = "">
						</div>
					</div>
					<div class="form-group">
						<label class="col-lg-3 control-label">Setting Environment:</label>
					</div>
					<hr>	
							
							
					<div class="form-group" id="svmDiv">
						<label class="col-lg-3 control-label">Scm:</label>
						<div class="col-lg-9">
							<select class="form-control" id="taskType"></select>
						</div>
					</div>

					<fieldset id="taskFieldset"></fieldset>
				

					
					<div class="form-group">
						<label class="col-lg-3 control-label">
							<input class="dbproj" type="checkbox" value="Buildproj"></input>
							Build Project
						</label>											
					</div>												

					<fieldset id="BuildTaskFieldset" style="display:none;"></fieldset>					   
					

					
					<div class="form-group">
						<label class="col-lg-3 control-label">
							<input class="dbproj" type="checkbox" value="Deployproj"></input>
							Deploy Project
						</label>
					</div>												

					<fieldset id="DeployTaskFieldset" style="display:none;"></fieldset>

					<div class="form-group">
						<label class="col-lg-3 control-label">
							<input class="dbproj" type="checkbox" value="CopyTask"></input>
							Copy existing task
						</label>
					</div>		

					<fieldset id="CopyTaskFieldset" style="display:none;">	
						<div class="path">
							<div class="form-group">
								<label class="col-lg-1 control-label"></label>
							<div class="col-lg-11">
							<table id="table" class="table table-hover">
								<thead>
									<tr>
										<th>Select</th>					
										<th>Task Name</th>			
										<th>Project Name</th>
										<th>Create Time</th>									
									</tr>
								</thead>
								<tbody>
									<%  var idx;
									var projnameLength = projnameArr.length;
									tstask.forEach( function ( tsk ){%>
									<tr>				
										<td>
											<input name="projecttasklist" id="tsklist<%= tsk._id%>" value="<%= tsk._id%>" type="checkbox"></input>
										</td>
										<td>	
											<%= tsk.testtaskname %>	
										</td>
										<td>	
											<% 
											for (idx = 0; idx < projnameLength; idx++) {
												var projItem = projnameArr[idx];
												if(tsk.proj_id==projItem[0]){
													%><%=projItem[1]%><%
													idx = projnameLength;
												}
											}
											%>	
										</td>
										<td>
											<%= timeLib.formatTime(tsk.createtime) %>
										</td>
									</tr>
									<% }); %>	
								</tbody>	
							</table>
							</div>
</div>
					</fieldset>
					

				</fieldset>
			</form>
			<div class="form-group">
				<div class="col-lg-12">
					<div class="form-btn">
						<button value = "submit" onClick="javascript:history.back(1)" id="cancelTestTaskBtn" class="btn btn-primary">Cancel</button> 
						<button class="btn btn-primary" id="projectSubmit" name="projectSubmit">Finish</button>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
