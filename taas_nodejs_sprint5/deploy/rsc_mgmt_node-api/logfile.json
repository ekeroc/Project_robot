{
    "appenders": 
    [
        {
            "type":"clustered",
            "category": "server",
            "appenders":
            [
                {
                    "type": "dateFile",
                    "filename": "log/server/connections.log",
                    "pattern": "-yyyy-MM-dd",
                    "maxLogSize": 1024,
                    "backups": 10
                },
                {
                    "type": "logLevelFilter",
                    "level": "ERROR",
                    "appender": 
                    {
                        "type": "dateFile",
                        "filename": "log/server/errors.log",
                        "pattern": "-yyyy-MM-dd",
                        "maxLogSize": 1024,
                        "backups": 10
                    }
                }
            ]
        },
        {
            "type":"clustered",
            "category": "openstack",
            "appenders":
            [
                {
                    "type": "dateFile",
                    "filename": "log/openstack/connections.log",
                    "pattern": "-yyyy-MM-dd",
                    "maxLogSize": 1024,
                    "backups": 10
                },
                {
                    "type": "logLevelFilter",
                    "level": "ERROR",
                    "appender": 
                    {
                        "type": "dateFile",
                        "filename": "log/openstack/errors.log",
                        "pattern": "-yyyy-MM-dd",
                        "maxLogSize": 1024,
                        "backups": 10
                    }
                }
            ]
        }
    ]
}